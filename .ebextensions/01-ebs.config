commands:
  01mkdir:
    command: "mkdir -p /media/ebs_volume"
    ignoreErrors: true
  02mount:
    command: "mount /dev/sdh /media/ebs_volume"
    ignoreErrors: true

option_settings:
  - namespace: aws:autoscaling:launchconfiguration
    option_name: BlockDeviceMappings
    value: /dev/sdh=snap-0cfcddb28c6bd6e6b
